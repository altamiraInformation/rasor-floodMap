<?xml version="1.0" ?>
<OTB>
    <version>4.3.0</version>
    <application>
        <name>MeanShiftSmoothing</name>
        <descr>Perform mean shift filtering</descr>
        <doc>
            <name>Exact Large-Scale Mean-Shift segmentation, step 1 (smoothing)</name>
            <longdescr>This application performs mean shift fitlering (multi-threaded).</longdescr>
            <authors>OTB-Team</authors>
            <limitations>With mode search option, the result will slightly depend on thread number.</limitations>
            <seealso> </seealso>
            <tags>
                <tag>Image Filtering</tag>
                <tag>LSMS</tag>
            </tags>
        </doc>
        <parameter mandatory="true">
            <key>in</key>
            <type>InputImage</type>
            <name>Input Image</name>
            <value></value>
        </parameter>
        <parameter mandatory="true">
            <key>fout</key>
            <type>OutputImage</type>
            <name>Filtered output</name>
            <pixtype>float</pixtype>
            <value></value>
        </parameter>
        <parameter mandatory="true">
            <key>foutpos</key>
            <type>OutputImage</type>
            <name>Spatial image</name>
            <pixtype>float</pixtype>
            <value></value>
        </parameter>
        <parameter mandatory="false">
            <key>spatialr</key>
            <type>Int</type>
            <name>Spatial radius</name>
            <value></value>
        </parameter>
    </application>
</OTB>
